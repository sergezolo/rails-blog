<%= form_for([@post, @post.comments.build]) do |f| %>
    <p style="margin: 0 auto">
        <%= f.label :username %><br>
        <%= f.text_field(:username, {:class => 'form-control'}) %><br>
    </p>
    <p>
        <%= f.label :body %><br>
        <%= f.text_area(:body, {:class => 'form-control'}) %><br>
    </p>
    <p>
        <%= f.submit({:class => 'btn btn-primary', :style => 'width: 100%'}) %><br>
    </p>
<% end %>